{
    "name": "ts-laravel",
    "author": "Seduq",
    "$schema": "https://json.schemastore.org/package.json",
    "description": "This is a Laravel template that ignores Node packages except compiling Typescript into JS files.",
    "keywords": [
        "laravel",
        "php",
        "typescript"
    ],
    "packageManager": "^bun@1.3.0",
    "private": true,
    "scripts": {
        "build": "bun run build:css && bun run build:ts",
        "build:css": "bunx @tailwindcss/cli -i resources/css/app.css -o public/css/app.css",
        "build:ts": "bunx tsc",
        "watch": "bun run build:css && bun run watch:ts",
        "watch:ts": "bunx tsc --watch",
        "test": "bun run test:ts",
        "test:ts": "bunx tsc tsconfig.build.json"
    },
    "type": "module",
    "devDependencies": {
        "@tailwindcss/cli": "^4.1.14",
        "tailwindcss": "^4.1.14",
        "typescript": "^5.9.3"
    },
    "dependencies": {}
}
